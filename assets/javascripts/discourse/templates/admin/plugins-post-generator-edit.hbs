<form class='form-horizontal'>

  <div>
    <label for='datetime'>Date</label>
    {{text-field name='datetime' value=model.datetime}}
  </div>

  <div>
    <label for='username'>Username</label>
    {{text-field name='username' value=model.user.username}}
  </div>

  <div>
    <label for='category'>Category</label>
    {{category-chooser name='category' value=model.category_id}}
  </div>

  <div>
    <label for='topic_title'>Topic Title</label>
    {{text-field name='topic_title' value=model.topic_title}}
  </div>

  <div>
    <label for='topic_id'>Topic ID</label>
    {{text-field name='topic_id' value=model.topic_id}}
  </div>

  <div>
    <label for='post'>Post</label>
    {{d-editor name='post' value=model.raw}}
  </div>

  <div class='buttons'>
    <button {{action 'save'}} class='btn btn-primary'>{{i18n 'admin.customize.save'}}</button>
    <button {{action 'destroy'}} class='btn btn-danger'>{{fa-icon 'trash-o'}}{{i18n 'admin.customize.delete'}}</button>
    <span class="status {{unless status 'hidden'}}">{{status}}</span>
  </div>

</form>
